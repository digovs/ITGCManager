<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vieira.rodrigo.itgcmanager.com.vieira.rodrigo.fragments.ProjectListFragment"
    android:padding="@dimen/activity_horizontal_margin">

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"/>

    <TextView android:id="@+id/project_list_empty_message" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:text="@string/project_list_empty_string"
        android:gravity="top|center_horizontal" android:layout_marginTop="15dp" android:visibility="gone"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_list_progress_bar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_list_progress_bar"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="@string/loading_dialog_message_loading_project_list"
        android:id="@+id/project_list_loading_message"/>

</RelativeLayout>
