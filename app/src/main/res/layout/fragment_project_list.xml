<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vieira.rodrigo.itgcmanager.com.vieira.rodrigo.fragments.ProjectFragment"
    android:padding="@dimen/activity_horizontal_margin">

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"/>

    <TextView android:id="@+id/project_list_empty_message" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_list_progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
