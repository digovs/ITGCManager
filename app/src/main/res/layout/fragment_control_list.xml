<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.vieira.rodrigo.itgcmanager.com.vieira.rodrigo.fragments.ControlListFragment">

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"/>

    <TextView android:id="@+id/control_list_empty_message" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:text="@string/control_list_empty_string"
        android:gravity="top|center_horizontal" android:layout_marginTop="15dp" android:visibility="gone"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/control_list_progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
