<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vieira.rodrigo.itgcmanager.TestActivity$PlaceholderFragment">

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp" android:layout_below="@+id/test_list_control_name"/>

    <TextView android:id="@+id/test_list_empty_message" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:text="@string/test_list_empty_string"
        android:gravity="top|center_horizontal" android:layout_marginTop="15dp" android:visibility="gone"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_list_progress_bar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_list_loading_message"
        android:text="@string/loading_dialog_message_loading_test_list"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/test_list_progress_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_list_control_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_marginBottom="@dimen/project_view_margin"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>
