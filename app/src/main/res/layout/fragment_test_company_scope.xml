<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/test_company_multichoice_relative_layout"
    android:layout_height="match_parent"
    android:padding="@dimen/add_test_margin_form"
    tools:context="com.vieira.rodrigo.itgcmanager.com.vieira.rodrigo.fragments.TestCompanyScopeFragment">

    <ListView android:id="@+id/test_company_multichoice_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp"
        android:layout_above="@+id/test_company_save_button"
        android:layout_alignParentTop="true" />

    <Button android:id="@+id/test_company_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/add_test_save_button_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/test_company_multichoice_empty_message" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:text="@string/company_list_empty_string"
        android:gravity="top|center_horizontal" android:layout_marginTop="15dp" android:visibility="gone"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_company_multichoice_progress_bar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
