<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vieira.rodrigo.itgcmanager.AddControlActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_control_progress_bar"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/add_control_form_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_control_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="@string/add_control_name_hint"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/add_control_margin_form"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/add_control_description"
                android:hint="@string/add_control_description_hint"
                android:layout_below="@+id/add_control_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:lines="3"
                android:gravity="start|top"
                android:layout_marginBottom="@dimen/add_control_margin_form" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/add_control_population"
                android:hint="@string/add_control_population_hint"
                android:layout_below="@+id/add_control_description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/add_control_margin_form" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_is_automatic_checkbox_text"
                android:id="@+id/add_control_is_automatic_checkbox"
                android:layout_below="@+id/add_control_population"
                android:layout_marginBottom="@dimen/add_control_margin_form"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_control_owner_view"
                android:layout_below="@+id/add_control_is_automatic_checkbox"
                android:hint="@string/add_control_owner_hint"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/add_control_owner_button"
                android:layout_toStartOf="@+id/add_control_owner_button"
                android:layout_alignBaseline="@+id/add_control_owner_button"
                android:layout_marginBottom="@dimen/add_control_margin_form"
                android:enabled="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_user_button"
                android:id="@+id/add_control_owner_button"
                android:layout_below="@+id/add_control_is_automatic_checkbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_control_scope_list"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/add_control_owner_view"
                android:layout_toLeftOf="@+id/add_control_scope_button"
                android:layout_toStartOf="@+id/add_control_scope_button"
                android:layout_alignRight="@+id/add_control_owner_view"
                android:layout_alignEnd="@+id/add_control_owner_view" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_scope_button_text"
                android:id="@+id/add_control_scope_button"
                android:layout_below="@+id/add_control_owner_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/add_control_owner_view"
                android:layout_toEndOf="@+id/add_control_owner_view" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/add_control_scope_list"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_control_save_button_text"
                    android:layout_weight="1"
                    android:id="@+id/add_control_save_button"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_control_save_and_continue_button_text"
                    android:layout_weight="1"
                    android:id="@+id/add_control_save_and_continue_button"
                    style="?android:attr/buttonBarButtonStyle"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
