<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vieira.rodrigo.itgcmanager.AddControlActivity" >

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_control_progress_bar"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/add_control_form_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_control_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/add_control_company_button"
                android:layout_alignEnd="@+id/add_control_company_button"
                android:hint="@string/add_control_name_hint"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/add_control_margin_form"/>
    
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/add_control_description"
                android:hint="@string/add_control_description_hint"
                android:layout_below="@+id/add_control_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:lines="4"
                android:gravity="left|top"
                android:layout_marginBottom="@dimen/add_control_margin_form"
                android:layout_alignRight="@+id/add_control_company_button"
                android:layout_alignEnd="@+id/add_control_company_button" />
    
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_is_automatic_checkbox_text"
                android:id="@+id/add_control_is_automatic_checkbox"
                android:layout_below="@+id/add_control_description"
                android:layout_marginBottom="@dimen/add_control_margin_form"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/add_control_company_button"
                android:layout_alignEnd="@+id/add_control_company_button" />
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/add_control_owner_view"
                android:layout_below="@+id/add_control_is_automatic_checkbox"
                android:background="@drawable/card_background_selector"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/add_control_owner_button"
                android:layout_toStartOf="@+id/add_control_owner_button"
                android:layout_above="@+id/add_control_company_list" />
    
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_user_button"
                android:id="@+id/add_control_owner_button"
                android:layout_toRightOf="@+id/add_control_company_list"
                android:layout_below="@+id/add_control_is_automatic_checkbox" />
    
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/add_control_company_list"
                android:background="@android:color/background_dark"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/add_control_system_button"
                android:layout_toStartOf="@+id/add_control_system_button"
                android:layout_below="@+id/add_control_owner_button"
                android:layout_marginTop="@dimen/add_control_margin_form" />
    
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_company_button"
                android:id="@+id/add_control_company_button"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/add_control_company_list"
                android:layout_toRightOf="@+id/add_control_company_list"
                android:layout_toEndOf="@+id/add_control_company_list"
                android:layout_below="@+id/add_control_owner_button" />
    
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/add_control_system_list"
                android:layout_marginTop="@dimen/add_control_margin_form"
                android:layout_below="@+id/add_control_company_list"
                android:background="@android:color/background_dark"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/add_control_system_button"
                android:layout_toStartOf="@+id/add_control_system_button" />
    
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_control_system_button"
                android:id="@+id/add_control_system_button"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/add_control_system_list"
                android:layout_alignTop="@+id/add_control_system_list" />
    
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_control_system_list"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/add_control_margin_form">
    
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_control_save_button_text"
                    android:layout_weight="1"
                    android:id="@+id/add_control_save_button" />
    
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_control_save_and_continue_button_text"
                    android:layout_weight="1"
                    android:id="@+id/add_control_save_and_continue_button" />
            </LinearLayout>



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
